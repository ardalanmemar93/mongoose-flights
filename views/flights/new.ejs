<%- include('../partials/header') %>
<nav>
  <a href="/flights" id="all-flights" class="nav-link">
    <span class="nav-link-span u-nav">All Flights</span>
  </a>
  <a href="/flights/new" id="new-flight" class="nav-link active">
    <span class="nav-link-span u-nav">New Flight</span>
  </a>
</nav>
</header>
<main>
  <div class="top">
    <h2>New Flight</h2>
  </div>
  <div class="forms">
    <form action="/flights" method="POST">
      <label>Airline:
        <select name="airline">
          <option value="American">American</option>
          <option value="Delta">Delta</option>
          <option value="Southwest">Southwest</option>
          <option value="United">United</option>
        </select>
      </label>
      <label>Airport:
        <select name="airport">
          <option value="DFW">DFW</option>
          <option value="DEN">DEN</option>
          <option value="LAX">LAX</option>
          <option value="SAN">SAN</option>
          <option value="ATL">ATL</option>
          <option value="AUS">AUS</option>
        </select>
      </label>
      <label>Flight Number:
        <input type="number" name="flightNo" required>
      </label>
      <label>Departs:
        <input type="datetime-local" name="departs" value="<%= departsDate %>">
      </label>
      <button class="submit">Add Flight</button>
    </form>
  </div>
</main>
